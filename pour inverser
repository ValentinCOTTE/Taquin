void afficherChaine(char* chaine)
{
    int i = 0;
    char caractereActuel = chaine[i];
     while(caractereActuel!='\0')
    {
        i++;
        caractereActuel=chaine[i];
    }

    i--;
    for(i;i>=0;i--)
    {
        printf("%c",chaine[i]);

    }

}


